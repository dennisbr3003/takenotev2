<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dennis_brink.android.takenotev2">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/tnv2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tnv2"
        android:supportsRtl="true"
        android:theme="@style/Theme.TakeNoteV2"
        tools:targetApi="31">
        <activity
            android:name=".UpdateNoteActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddNoteActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" /> <!-- absolutely mandatory for "new" startActivityForResult method: activityResultLauncherAddNote -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>